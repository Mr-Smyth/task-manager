{{!-- app/components/create-user-modal.hbs --}}
{{!-- Full width backdrop --}}
<div class="modal-backdrop" {{on "click" this.closeModal}}></div>

{{!-- Modal start --}}
<div class="modal">
  <div class="modal-header">
    <h2>Create a New User</h2>
    {{!-- Make button as 'X' --}}
    <button class="close-button" type="button" {{on "click" this.closeModal}}>&times;</button>
  </div>

  <div class="modal-body">
    {{!-- Form --}}
    <form {{on "submit" this.createUser}} class="user-form">
      <div class="form-group">
        <label for="userName">User Name:</label>
        <input id="userName" name="userName" type="text" required class="form-input">
      </div>

      <div class="form-group">
        <label for="userDescription">Description:</label>
        <input id="userDescription" name="userDescription" type="text" required class="form-input">
      </div>

      <div class="form-actions">
        <button type="submit" class="submit-button">Create</button>
      </div>
    </form>
  </div>
</div>
