{{!-- app/templates/users/create-user.hbs --}}
{{page-title "Create User"}}

{{!-- Use reusable Modal for creating a new User --}}
  <Modal @onClose={{this.closeModal}} @modalHeading={{this.modalHeading}} @modalHeadingClass="modal-header" @modalClass="modal modal-user">
    {{!-- Form --}}
    <form {{on "submit" this.createUser}} class="modal-form-users">
      <div class="form-group">
        <label for="userFirstName">User First Name:</label>
        <input id="userFirstName" name="userName" type="text" required class="form-input">
      </div>

      <div class="form-group">
        <label for="userLastName">User Last Name:</label>
        <input id="userLastName" name="userLastName" type="text" required class="form-input">
      </div>

      <div class="form-group">
        <label for="userDescription">Description:</label>
        <input id="userDescription" name="userDescription" type="text" required class="form-input">
      </div>

      <div class="form-actions">
        <button type="submit" class="default-button green-button">Create</button>
      </div>
    </form>
  </Modal>
