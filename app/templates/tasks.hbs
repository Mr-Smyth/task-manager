{{!-- app/templates/tasks.hbs --}}
{{page-title "Tasks"}}

<div class="container">
  <h1>Tasks</h1>
</div>

<div class="container">
  <h2 class="unassigned-tasks-heading">Unassigned Tasks</h2>
  {{#each this.unassignedTasks as |task|}}
  <div class="task-box  task-box-unassigned">
    <div class="task-info">
      <h2>{{task.title}}</h2>
      <p class="description">{{task.description}}</p>
      <p class="owner">Owner: {{task.user.name}} - {{task.user.description}}</p>
    </div>
    <div class="assign-user-container">
      <UserSelector @users={{@model.users}} @task={{task}} @onUserAssign={{this.assignUser}} />
    </div>
  </div>
  {{/each}}

  <hr class="section-separator">

  <h2>Assigned Tasks</h2>
  {{#each this.assignedTasks as |task|}}
  <div class="task-box  task-box-assigned">
    <div class="task-info">
      <h2>{{task.title}}</h2>
      <p class="description">{{task.description}}</p>
      <p class="owner">Owner: {{task.user.name}} - {{task.user.description}}</p>
    </div>
    <div class="assign-user-container">
      <UserSelector @users={{@model.users}} @task={{task}} @onUserAssign={{this.assignUser}} />
    </div>
  </div>
  {{/each}}
</div>