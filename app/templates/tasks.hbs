{{page-title "Tasks"}}

<div class="container">
  <h1>Tasks</h1>
</div>

<div class="container">
  {{#each @model.tasks as |task|}}
  <div class="task-box">
    <div class="task-info">
      <h2>{{task.title}}</h2>
      <p class="description">{{task.description}}</p>
      <p class="owner">Owner: {{task.user.name}} - {{task.user.description}}</p>
    </div>
    <div class="assign-user-container">
      {{!-- pass the users and the current task to the user-selector component --}}
      <UserSelector @users={{@model.users}} @task={{task}} @onUserAssign={{this.assignUser}} />
    </div>
  </div>
  {{/each}}
</div>